            <view class='pro_f'>
              <image class="pro_image" src="{{item.image}}" lazy-load="true"></image>
            </view>
              <view   class="pro_r"> 
                <view>
                <view class="pro_first_cont">{{item.name}}</view>
                <text class="pro_second_cont">{{item.introduce}}</text><!--可以识别换行符号-->
